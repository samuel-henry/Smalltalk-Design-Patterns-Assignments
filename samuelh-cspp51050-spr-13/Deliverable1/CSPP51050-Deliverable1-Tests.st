olioManager portfolio addComponent: portfolio2.	portfolioManager evaluate.	self should: [PortfolioManager getInstance visitor sum = 1919].	PortfolioManager reset.! !!PortfolioManagerTests methodsFor: 'testing' stamp: 'sjh 4/29/2013 18:11'!testGetInstance	"confirm that the getInstance message returns a singleton PortfolioManager"	| firstCallToGetInstance secondCallToGetInstance |	PortfolioManager reset. "make sure singleton PortfolioManager has been cleaned up from previous users"	firstCallToGetInstance := PortfolioManager getInstance. "assign an instance of PortfolioManager to firstCallToGetInstance"	self shouldnt: [firstCallToGetInstance isNil]. "firstCallToGetInstance should not be nil"	self shouldnt:[ firstCallToGetInstance portfolio isNil]. "portfolio should be initialized"	secondCallToGetInstance := PortfolioManager getInstance. "assign an instance of PortfolioManager to secondCallToGetInstance"	self shouldnt: [secondCallToGetInstance isNil]. "secondCallToGetInstance should not be nil"	self should: [firstCallToGetInstance = secondCallToGetInstance]. "firstCallToGetInstance should equal secondCallToGetInstance"	PortfolioManager reset. "make sure singleton PortfolioManager is cleaned up for future users"! !!PortfolioManagerTests methodsFor: 'testing' stamp: 'sjh 4/29/2013 18:12'!testNewPortfolioManager	"confirm that calling new on PortfolioManager returns an error because PortfolioManager is a Singleton"		self should: [ PortfolioManager new ] raise: Error! !TestCase subclass: #PricingVisitorTests	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'CSPP51050-Deliverable1-Tests'!!PricingVisitorTests methodsFor: 'testing' stamp: 'sjh 5/7/2013 12:48'!testVisitBondLeaf	| visitor bond testIssueDate |	PortfolioManager reset.	visitor := PortfolioManager getInstance visitor.		bond := BondLeaf new.	bond principal: 100 .	bond coupon: 0.1 .	testIssueDate := Date today. "test zero days from today"	bond issueDate: testIssueDate.	visitor sum: 0.	visitor visitBond: bond.	self should: [visitor sum = 100 ].	testIssueDate := testIssueDate subtractDays: 365. "test one year prior to today"	bond issueDate: testIssueDate.	visitor sum: 0.	visitor visitBond: bond.	self should: [visitor sum = 110 ].	testIssueDate := testIssueDate subtractDays: 365. "test two years prior to today"	bond issueDate: testIssueDate.	visitor sum: 0.	visitor visitBond: bond.	self should: [visitor sum = 121 ].	testIssueDate := testIssueDate subtractDays: 365. "test three years prior to today"	bond issueDate: testIssueDate.	visitor sum: 0.	visitor visitBond: bond.	self should: [visitor sum = 133.1 ].	PortfolioManager reset.! !!PricingVisitorTests methodsFor: 'testing' stamp: 'sjh 5/7/2013 12:48'!testVisitMoneyMarketLeaf"calculate the value of a money market security in terms of the value accrued per day up to the mature date"	| security testIssueDate aVisitor |	PortfolioManager reset.	aVisitor := PortfolioManager getInstance visitor.	security := MoneyMarketLeaf new.	security discountValue: 100.	security matureValue: 250.	security daysToMaturity: 30.	testIssueDate := Date today.	security issueDate: testIssueDate.	aVisitor visitMoneyMarket: security.	self should: [ aVisitor sum = security discountValue ]. "test 0 days of accrual"	testIssueDate := testIssueDate subtractDays: 10.	security issueDate: testIssueDate.	aVisitor sum: 0.	aVisitor visitMoneyMarket: security.	self should: [ aVisitor sum = 150 ]. "test 10 days of accrual"	testIssueDate := testIssueDate subtractDays: 10.	security issueDate: testIssueDate.	aVisitor sum: 0.	aVisitor visitMoneyMarket: security.	self should: [ aVisitor sum = 200 ]. "test 20 days of accrual"	testIssueDate := testIssueDate subtractDays: 5.	security issueDate: testIssueDate.	aVisitor sum: 0.	aVisitor visitMoneyMarket: security.	self should: [ aVisitor sum = 225 ]. "test 25 days of accrual"	testIssueDate := testIssueDate subtractDays: 5.	security issueDate: testIssueDate.	aVisitor sum: 0.	aVisitor visitMoneyMarket: security.	self should: [ aVisitor sum = security matureValue ]. "test 30 days of accrual = full duration"	testIssueDate := testIssueDate subtractDays: 1.	security issueDate: testIssueDate.	security issueDate: testIssueDate.	aVisitor sum: 0.	aVisitor visitMoneyMarket: security.	self should: [ aVisitor sum = security matureValue ]. "test 31 days of accrual >= full duration"	PortfolioManager reset.! !!PricingVisitorTests methodsFor: 'testing' stamp: 'sjh 5/7/2013 12:49'!testVisitStock	| aStock aVisitor |	PortfolioManager reset.	aVisitor := PortfolioManager getInstance visitor.	aVisitor sum: 0.	aStock := StockLeaf new.	aStock componentValue: 500.	aVisitor visitStock: aStock.	self should: [aVisitor sum = aStock componentValue].	PortfolioManager reset.! !TestCase subclass: #StockLeafTests	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'CSPP51050-Deliverable1-Tests'!